{{# partial "contenido" }}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item" aria-current="page"><a href="/organizaciones/{{idOrganizacion}}">{{nombreOrganizacion}}</a></li></li>
{{#entidad}}
        <li class="breadcrumb-item active" aria-current="page">{{nombreFicticio}}</li>
    </ol>
</nav>
<h1>{{nombreFicticio}}</h1>
<hr>
<div class="seccion-texto-detalle">
    <div class="elemento-detalle">
        <span class="span-detalle">Descripción</span>
        <p class="valor-detalle">{{descripcion}}</p>
    </div>
    <div class="elemento-detalle">
        <form action="/organizaciones/{{idOrganizacion}}/entidades/base/{{this.id}}" method="POST">
            <label class="span-detalle" for="categoria">Categoría</label>
            <p class="valor-detalle">{{categoria.nombreCategoria}}</p>
            <select name="categoria">
                {{#each categorias}}
                <option value="{{this.id}}">{{this.nombreCategoria}}</option>
                {{/each}}
            </select>
            <input class="btn btn-warning" type="submit" value="Modificar"></input>
        </form>
    </div>
</div>
<hr>
<h3 class="span-detalle">
    Egresos
    <a href="{{entidad.id}}/egresos/nuevo" class="btn btn-primary btn-nueva" type="submit" value="Nueva"/>
    <i class="small material-icons">add_circle_outline</i> Agregar
    </a>
</h3>
{{#if egresos}}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col" style="width: 8%">#</th>
            <th scope="col">Fecha</th>
            <th scope="col">Proveedor</th>
            <th scope="col">Documento Comercial</th>
            <th scope="col">Estado</th>
            <th scope="col" style="width: 35%">Acciones</th>
        </tr>
        </thead>
        <tbody>
        {{#each egresos}}
            <tr>
                <td>{{egreso_id}}</td>
                <td>{{fechaDeOperacion}}</td>
                <td>{{proveedor.nombre}}</td>
                <td>{{documentoComercial.tipoDocumentoComercial.nombre}} - {{documentoComercial.identificadorDocumento}}</td>
                <td>{{estado}}</td>
                <td>
                    <a class="btn btn-info" href="{{entidad.id}}/egresos/{{egreso_id}}">
                        <i class="small material-icons">description</i>Ver detalle</a>
                    <a href="#" class="btn btn-warning">
                        <i class="small material-icons">edit</i>
                        Modificar
                    </a>
                    <a href="#" class="btn btn-danger">
                        <i class="small material-icons">delete</i>
                        Borrar
                    </a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <div class="alert alert-danger text-center" role="alert">
        No se encontró ningún egreso.
    </div>
{{/if}}
<hr>
{{/entidad}}
{{/partial}}
{{> layout.html.hbs }}