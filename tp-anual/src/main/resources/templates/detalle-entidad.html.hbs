{{#partial "contenido"}}
{{#entidad}}
<h1>{{nombreFicticio}}</h1>
{{#if descripcion}}
    <span>Descripción: {{descripcion}}</span></br>
{{/if}}
    <div>
<form method="post" action="/organizaciones/{{idOrganizacion}}/entidades/{{this.id}}">
<label for="nuevaCategoriaAsignada">Categoria: {{categoria.nombreCategoria}} </label>

 <select name="nuevaCategoriaAsignada">
            {{#each categorias}}
                <option value="{{this.id}}">{{this.nombreCategoria}}</option>
            {{/each}}
        </select>
        <input class="page-button" type="submit" value="Modificar"></input>
    </form>
    </div>
    
{{#if razonSocial}}
    <span>Razón social: {{razonSocial}}</span></br>
{{/if}}
{{#if cuit}}
    <span>CUIT: {{cuit}}</span></br>
{{/if}}
{{#if direccionPostal}}
    <span>Dirección Postal: {{direccionPostal}}</span></br>
{{/if}}
{{#if codigoInscripcionIGJ}}
    <span>Código inscripción IGJ: {{codigoInscripcionIGJ}}</span></br>
{{/if}}
<span>Egresos: <a class="page-button" href="{{entidad.id}}/egresos/nuevo">Nuevo</a></span></br>
<ul>
    {{#each egresos}}
        <li><a href="{{entidad.id}}/egresos/{{this.egreso_id}}">Egreso {{this.egreso_id}} ({{this.fechaDeOperacion}})</a></li>
    {{/each}}
</ul>
{{/entidad}}
{{/partial}}

{{> layout.html.hbs }}